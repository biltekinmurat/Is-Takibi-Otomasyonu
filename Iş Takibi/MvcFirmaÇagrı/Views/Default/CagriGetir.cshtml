@model MvcFirmaÇagrı.Models.Entity.TblCagrilar
@{
    ViewBag.Title = "CagriGetir";
    Layout = "~/Views/Shared/FirmaLayout.cshtml";
}

<h2>Çagri Düzenleme</h2>

<br />

@using (@Html.BeginForm("CagriDüzenle", "Default", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.ID)
    @Html.Label("Konu")
    @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Acıklama, 10, 4, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Değişiklikleri Kaydet</button>
    }

